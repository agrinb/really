<div class="row">

<div class="col-md-6 col-sm-offset-3">
        <h2>Create An Appointment</h2>
</div >
<div class="col-md-6 col-sm-offset-3">
  <div class="list-group">
    <div class="list-group-item">
      <h4 class="list-group-item-heading"><%= @property.name %></h4>
      <p class="list-group-item-text"><%= @property.description %></p>
    </div>
  </div>
</div>

<div class="container">
  <%= simple_form_for [@property, @appointment] do |f| %>
  <%= f.error_notification %>
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
        <div class="form-group">
        <% my_date_time = Time.now %>
          <%= f.label :meeting, "When" %>
            <%= f.datetime_select(:meeting) %>
        </div>

          <div class="form-group">
            <%= f.label :instructions %>
              <%= f.text_area :instructions, id: "instructions", class: "form-control input-lg", placeholder: "What should the agent highlight during the showing?" %>
          </div>

          <div class="form-group">
          <%= f.label :visitor %>
            <%= f.text_field :visitor, id: "visitor", class: "form-control input-lg", placeholder: "Isabel Gordon" %>
        </div>


      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.label :visitor_phone %>
            <%= f.text_field :visitor_phone, class: "form-control input-lg", placeholder: "555-123-4567" %>
        </div>
      </div>

        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.label :visitor_email %>
              <%= f.email_field :visitor_email, class: "form-control input-lg", placeholder: "isabel.gordon@gmail.com" %>
            </div>
          </div>
        </div>



            <div>
              <hr class="colorgraph">
              <div class="row">
                <div class="col-xs-12 col-md-6-offset"><input type="submit" value="Create Appointment" class="btn btn-primary btn-block btn-lg"></div>
              </div>
            </div>


<% end %>
<!-- Modal -->
</div>
