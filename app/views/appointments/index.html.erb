<% if @appointments.empty? %>
  <div class="alert alert-dismissable alert-warning">
    <h4 class="list-group-item-heading">Available appointments in your area: <%= @appointments.count %></h4>
    </div>
<% else %>
  <div class="alert alert-dismissable alert-success">
    <h4 class="list-group-item-heading">Available appointments in your area: <%= @appointments.count %></h4>
  </div>
<% end %>

<div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Your Upcoming Appointments</h3>
    </div>
      <div class="panel-body">
        <div class="col-md-4 col-md-12">
           <table class="table table-striped table-hover ">
              <thead>
                <tr>
                  <th>Time and Date</th>
                  <th>Address</th>
                  <th>Visitor</th>
                  <th>Visitor Phone</th>
                  <th>View Details</th>
                </tr>
              </thead>
                       <% binding.pry %>
              <% @my_appointments.each do |appt| %>

                  <tbody>
                    <tr>
                      <td><%= appt.meeting %></td>
                      <td><%= appt.property.address %></td>
                      <td><%= appt.visitor %></td>
                      <td><%= appt.visitor_phone%></td>
                      <td><%= link_to "View",  agent_appointment_path(appt), class: "btn btn-primary" %></td>
                    </tr>
                  </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>




<% @appointments.each do |appt| %>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4 class="list-group-item-heading">Time: <%= appt.meeting %>
      <div class="pull-right">Zip Code: <%= appt.property.zip_code %></div></h4>
    </div>
    <div class="panel-body">

          Address: <%= appt.property.address %>
        <br>
          Instructions: <%= appt.instructions %>
      <div class="btn-group pull-right">
          <%= link_to "Claim",  agent_appointment_path(appt),  method: :put, class: "btn btn-success" %>
        </div>
    </div>
  </div>


<% end %>
