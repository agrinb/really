<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


    <div class="form-group">
      <div><%= f.label :fist_name, "First name:" %><br />
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>

      <div><%= f.label :last_name, "Last name:" %><br />
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

      <div><%= f.label :email, "Email:" %><br />
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div><%= f.label :cell_phone , "Cell Phone:"%><br />
        <%= f.text_field :cell_phone, class: "form-control" %>
      </div>

      <div><%= f.label :password, "Password:" %><br />
        <%= f.password_field :password, class: "form-control" %>
      </div>

      <div><%= f.label :password_confirmation, "Password Confirm:" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div><%= f.label :role, "I am a:" %><br />
        <%= f.select :role, options_for_select([['Seller', 'seller'], ['Agent', 'agent']]), class: "form-control"%>
      </div>


      <div><%= f.submit "Sign up" %></div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
