<div class="container">
  <%= simple_form_for @property do |f| %>
  <%= f.error_notification %>



<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
      <div class="col-md-offset-2">
        <h2>Create Your Property </h2>
      </div>
        <hr class="colorgraph">
        <div class="form-group">
          <%= f.label :title %>
            <%= f.text_field :name, id: "email", class: "form-control input-lg", placeholder: "Lakeside Sanctuary" %>
        </div>

          <div class="form-group">
            <%= f.label :description %>
              <%= f.text_area :description, id: "cell_phone", class: "form-control input-lg", placeholder: "What the buyer know about your beautiful house" %>
          </div>

          <div class="form-group">
          <%= f.label :address %>
            <%= f.text_field :address, id: "email", class: "form-control input-lg", placeholder: "232 Main St." %>
        </div>


      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.label :city %>
            <%= f.text_field :city, class: "form-control input-lg", placeholder: "Boston" %>
        </div>
      </div>

        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.label :state %>
              <%= f.text_field :state, class: "form-control input-lg", placeholder: "MA" %>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-12 col-sm-6 col-md-6">
            <div class="form-group">
              <%= f.label :zip, "Zip Code" %>
              <%= f.text_field :zip_code, class: "form-control input-lg", placeholder: "02111" %>
            </div>
          </div>

          <div class="col-xs-12 col-xs-6 col-sm-3">
            <div class="form-group">
              <%= f.label :bedrooms %>
              <%= f.text_field :bedrooms, class: "form-control input-lg", placeholder: "3" %>
            </div>
          </div>

          <div class="col-xs-12 col-xs-6 col-sm-3">
            <div class="form-group">
              <%= f.label :bathrooms %>
              <%= f.text_field :bathrooms, class: "form-control input-lg", placeholder: "2" %>
            </div>
          </div>
        </div>

        <div class="form-group">
            <%= f.label :details %>
              <%= f.text_area :details, class: "form-control input-lg", placeholder: "Details about renovations, the lot, etc. should go here..." %>
        </div>

        <div class="form-group">
            <%= f.label :photo, "Add a Photo" %>
              <%= f.file_field :photo, class: "form-control input-lg" %>
        </div>


            <div>
              <hr class="colorgraph">
              <div class="row">
                <div class="col-xs-12 col-md-6-offset"><input type="submit" value="Create Property" class="btn btn-primary btn-block btn-lg"></div>
              </div>
            </div>


<% end %>
<!-- Modal -->
</div>
