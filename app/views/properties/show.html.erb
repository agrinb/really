
  <div class="panel panel-primary">
    <div class="panel-heading">
      <h3 class="panel-title"><%= @property.name %>
        <span class="pull-right">Zip Code: <%= @property.zip_code %></span>
      </h3>
    </div>
    <div class="panel-body">
      <div class="media col-md-3">
        <figure class="pull-left">
          <img class="media-object img-rounded img-responsive"  src="http://placehold.it/350x250" alt="placehold.it/350x250" >
        </figure>
      </div>
      <div class="class=col-md-6 col-sm-offset-3">
              <h4 class="list-group-item-heading"><%= @property.name %></h4>
              <p class="list-group-item-text"><%= @property.description %></p>
              <p class="list-group-item-text">Bedrooms: <%= @property.bedrooms %></p>
              <p class="list-group-item-text">Bathrooms: <%= @property.bathrooms %></p>
              <p class="list-group-item-text">Details: <%= @property.details %></p>
      </div>
        <div>
        <%= link_to "Edit", edit_property_path(@property), class: "btn btn-info" %>
        <%= link_to "New Appointment", new_property_appointments_path(@property), class: "btn btn-success" %>
        </div>
    </div>
  </div>

    <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Appointments</h3>
    </div>
      <div class="panel-body">
        <div class="col-md-4 col-md-12">
           <table class="table table-striped table-hover ">
              <thead>
                <tr>
                  <th>Time and Date</th>
                  <th>Visitor</th>
                  <th>Visitor Phone</th>
                  <th>Agent Name</th>
                  <th>Agent Phone</th>
                </tr>
              </thead>
              <% @property.appointments.each do |appt| %>
              <tbody>
                <tr>
                  <td><%= appt.meeting %></td>
                  <td><%= appt.visitor %></td>
                  <td><%= appt.visitor_phone%></td>
                  <% if !appt.agent_profile_id == nil %>
                    <td><%= appt.agent_profile.user.first_name %> <%= appt.agent_profile.user.last_name %></td>
                    <td><%= appt.agent_profile.user.cell_phone %></td>
                  <% else %>
                    <td><span class="label label-warning">Pending Confirmation</span></td>
                    <td><span class="label label-warning">Pending Confirmation</span></td>
                  <% end %>
                </tr>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>

