<div class="container">
  <%= simple_form_for [@user, @property] do |f| %>
  <%= f.error_notification %>


<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <form role="form">
      <h2>Please Sign Up <small>It's free and always will be.</small></h2>
      <hr class="colorgraph">


        <div class="form-group">
          <%= f.label :title %>
            <%= f.text_field :name, id: "email", class: "form-control input-lg", placeholder: "Lakeside Sanctuary", tabindex: "3" %>
        </div>

          <div class="form-group">
            <%= f.label :description %>
              <%= f.text_area :description, id: "cell_phone", class: "form-control input-lg", placeholder: "What the buyer know about your beautiful house", tabindex: "4" %>
          </div>

          <div class="form-group">
          <%= f.label :address %>
            <%= f.text_field :address, id: "email", class: "form-control input-lg", placeholder: "232 Main St.", tabindex: "3" %>
        </div>


      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.label :city %>
            <%= f.password_field :city, id: "password_confirmation", class: "form-control input-lg", placeholder: "Boston", tabindex: "6" %>
        </div>
      </div>

        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.label :state %>
              <%= f.password_field :state, id: "password", class: "form-control input-lg", placeholder: "MA", tabindex: "5" %>
            </div>
          </div>


    </div>



      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
              <%= f.label :bedrooms %>
              <%= f.text_field :bedrooms, autofocus: true, id: "first_name", class: "form-control input-lg", placeholder: "No. of bedrooms", tabindex: "1" %>
            </div>
          </div>

        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.label :bathrooms %>
              <%= f.text_field :bathrooms, id: "last_name", class: "form-control input-lg", placeholder: "No. of bathrooms", tabindex: "2" %>
            </div>
          </div>
        </div>

        <div class="form-group">
            <%= f.label :details %>
              <%= f.text_area :details, id: "cell_phone", class: "form-control input-lg", placeholder: "Details about renovations, the lot, etc. should go here...", tabindex: "4" %>
          </div>





<div>
  <div>
      <div>



      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-12 col-md-6"><input type="submit" value="Register" class="btn btn-primary btn-block btn-lg" tabindex="7"></div>
      </div>
    </form>
  </div>
</div>

<% end %>
